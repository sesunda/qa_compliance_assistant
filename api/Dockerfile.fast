# Fast build Dockerfile - uses pre-built base image
# Builds in ~2-3 minutes in ACR

FROM acrqcadev2f37g0.azurecr.io/qca-base:v1

WORKDIR /app

# Copy application code (only this changes frequently)
COPY api/ .

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
