# Production Environment Variables Template
# Copy this to .env and customize for your production environment

# Database Configuration
DATABASE_URL=postgresql://qca_user:CHANGE_PASSWORD@db:5432/qca_db
POSTGRES_USER=qca_user
POSTGRES_PASSWORD=CHANGE_TO_SECURE_PASSWORD
POSTGRES_DB=qca_db

# API Configuration
API_TITLE=Quantique Compliance Assistant API
API_VERSION=1.0.0
SECRET_KEY=CHANGE_TO_LONG_RANDOM_SECRET_KEY_256_BITS

# Security Configuration
ALLOWED_ORIGINS=["https://yourapp.com","https://admin.yourapp.com"]

# LLM Provider Configuration (choose one)
LLM_PROVIDER=groq

# OpenAI (Paid service)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Groq (Free tier: 30 req/min, 6000 req/day) - RECOMMENDED
GROQ_API_KEY=gsk_your-groq-api-key-here
GROQ_MODEL=llama3-8b-8192

# Anthropic (Limited free credits)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Ollama (Local, completely free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Optional: Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# Optional: File Upload Limits
MAX_FILE_SIZE_MB=10